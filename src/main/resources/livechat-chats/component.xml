<component name="livechat-chats" type="synapse/template">
    <subComponents>
        <component name="listChats">
            <file>listChats.xml</file>
            <description>Get finished chats and left messages</description>
        </component>
        <component name="getChatById">
            <file>getChatById.xml</file>
            <description>Returns single chat item for the given CHAT_ID</description>
        </component>
